{
    "manifest_version": 3,
    "name": "this is a duck with adhd",
    "description": "duck go quaaaack",
    "version": "1.0",
    "action": {
      "default_popup": "index.html",
      "default_icon": "hi.png"
    },
    "content_scripts": [
        {
            "js": ["subscriptions_script.js"],
            "matches": [
              "https://www.youtube.com/feed/subscriptions"
            ]
        },        
        {
            "js": ["script.js"], 
            "matches": [
                "https://*.youtube.com/"
            ]
        }
    ],
    "background": {
    "service_worker": "background.js",
    "type": "module"
  },


    "host_permissions": [
        "https://*.youtube.com/*"
    ],

    "permissions": [
    "tabs",
    "activeTab", 
    "webNavigation",
    "scripting"
    ]

    
  }